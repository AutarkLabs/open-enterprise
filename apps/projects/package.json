{
  "name": "@tps/apps-projects",
  "version": "0.0.1",
  "description": "Project management app from Planning Suite",
  "scripts": {
    "build:app": "parcel build app/index.html -d dist/ --public-url '.'",
    "build:script": "parcel build app/script.js -d dist/",
    "build": "npm run compile && npm run sync-assets && npm run build:app && npm run build:script",
    "compile": "truffle compile",
    "console": "truffle dev",
    "copy-public-assets": "rsync -rtu ./public/ ./dist",
    "coverage": "SOLIDITY_COVERAGE=true npm run ganache-cli:test",
    "dev": "npm run sync-assets && parcel app/index.html --port 3333",
    "ganache-cli:test": "../shared/test-helpers/ganache-cli.sh",
    "lint": "solium --dir ./contracts",
    "precommit": "lint-staged",
    "prepublishOnly": "truffle compile --all",
    "publish:http": "npm run build:script && aragon apm publish major --http localhost:3333 --http-served-from ./dist",
    "publish": "aragon apm publish patch && sleep 3",
    "publish:major": "aragon apm publish major --files dist/",
    "publish:minor": "aragon apm publish minor --files dist/",
    "publish:patch": "aragon apm publish patch --files dist/",
    "deploy:rinkeby": "npm run publish:major -- --environment rinkeby",
    "deploy:rpc": "npm run publish:patch -- --environment default",
    "deploy:staging": "npm run publish:major -- --environment staging",
    "start": "aragon run",
    "sync-assets": "copy-aragon-ui-assets -n aragon-ui ./dist && npm run copy-public-assets",
    "test:gas": "GAS_REPORTER=true npm test",
    "test": "TRUFFLE_TEST=true npm run ganache-cli:test"
  },
  "dependencies": {
    "@aragon/api": "1.1.0",
    "@aragon/api-react": "1.0.0-beta.2",
    "@aragon/apps-vault": "^4.1.0",
    "@aragon/ui": "1.0.0-alpha.18",
    "@babel/polyfill": "^7.2.5",
    "@tps/ui": "^0.0.1",
    "apollo-boost": "^0.1.22",
    "axios": "^0.18.0",
    "graphql": "^14.0.2",
    "graphql-request": "^1.8.2",
    "graphql-tag": "^2.10.0",
    "ipfs-http-client": "29.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-apollo": "^2.3.2",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.1.0",
    "react-number-format": "^4.0.8",
    "styled-components": "4.1.3",
    "web3-utils": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@tps/test-helpers": "^0.0.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-standard": "^4.0.0",
    "lint-staged": "^9.2.0",
    "parcel-bundler": "1.12.3",
    "prettier-eslint": "^9.0.0",
    "react-axe": "^3.0.1",
    "react-hot-loader": "^4.12.7",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0"
  },
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/AutarkLabs/planning-suite"
  },
  "keywords": [],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ]
  }
}
